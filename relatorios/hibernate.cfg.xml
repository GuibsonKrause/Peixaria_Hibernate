<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/peixaria?zeroDateTimeBehavior=convertToNull</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">update</property>
        <mapping class="CDP.Cep" />
        <mapping class="CDP.Cliente" />
        <mapping class="CDP.CustoFixo" />
        <mapping class="CDP.CustoVariavel" />
        <mapping class="CDP.Endereco" />
        <mapping class="CDP.Fisico" />
        <mapping class="CDP.Fornecedor" />
        <mapping class="CDP.Item" />
        <mapping class="CDP.PeixeVendido" />
        <mapping class="CDP.Juridico" />
        <mapping class="CDP.Login" />
        <mapping class="CDP.Peixe" />
        <mapping class="CDP.Pessoa" />
        <mapping class="CDP.Venda" />

    </session-factory>
</hibernate-configuration>
